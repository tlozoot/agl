- form_for [:experiment, @result], :url => experiment_path(@participant), :html => { :method => :put, :class => "ajax_submit" } do |f|
  = f.hidden_field :id
  - div_for @result.paradigm do
    #singular_col.item_text
      This is a 
      - if @result.both_responses
        = f.text_field :singular_response, :class => 'paradigm_sound singular', :id => @result.paradigm.singular, 'data-soundFile' => @result.paradigm.singular_sound_file
      - else
        %span.strong.paradigm_sound.singular{ 'data-soundFile' => @result.paradigm.singular_sound_file, :id => @result.paradigm.singular }= @result.paradigm.human_singular
      %br
      = image_tag @result.clipart.singular_file, :width => "150"
    
    #plural_col.item_text
      These are 
      - if (@result.experiment_phase == 'testing') || (@result.experiment_phase == 'training_test')
        = f.text_field :plural_response
      - elsif (@result.experiment_phase == 'learning') && @result.both_responses
        = f.text_field :singular_response, :class => 'paradigm_sound plural', :id => @result.paradigm.plural, 'data-soundFile' => @result.paradigm.plural_sound_file
      - else
        %span.strong.paradigm_sound.plural{ 'data-soundFile' => @result.paradigm.plural_sound_file, :id => @result.paradigm.plural }= @result.paradigm.human_plural
      %br
      = (image_tag @result.clipart.plural_file, :width => "50", :class => "plural_img") * 3
      %br
      = (image_tag @result.clipart.plural_file, :width => "50", :class => "plural_img") * 2
  %fieldset.continue
    /%span.phase= @result.experiment_phase.humanize
    = render 'progress', :participant => @participant
    %fieldset.submit= submit_tag "Next &raquo;", :disabled => true